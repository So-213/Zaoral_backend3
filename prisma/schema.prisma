generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String        @id @default(cuid())
  name               String?
  email              String?       @unique
  emailVerified      DateTime?
  image              String?
  stripe_customer_id String?
  created_at         DateTime      @default(now())
  updated_at         DateTime      @updatedAt
  left_projects      Int           @default(3)
  plan               Plan          @default(FREE)
  accounts           Account[]
  sessions           Session[]
  subscription       Subscription?
  projects           Project[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                     String   @id @default(uuid())
  user_id                String   @unique
  stripe_subscription_id String   @unique
  status                 String
  current_period_start   DateTime
  current_period_end     DateTime
  cancel_at_period_end   Boolean  @default(false)
  created_at             DateTime @default(now())
  updated_at             DateTime @updatedAt
  user                   User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model SubscriptionTrash {
  id                       String   @id @default(uuid())
  user_id                  String
  stripe_subscription_id   String
  status                   String
  current_period_start     DateTime
  current_period_end       DateTime
  cancel_at_period_end     Boolean
  created_at               DateTime @default(now())
  deleted_at               DateTime @default(now())
  original_subscription_id String
}

model Project {
  id             String          @id @default(cuid())
  user_id        String
  user_name      String
  type           ProjectType     @default(message)
  slug           String          @unique
  created_at     DateTime        @default(now())
  expires_at     DateTime
  user           User            @relation(fields: [user_id], references: [id], onDelete: Cascade)
  projectMessage ProjectMessage?

  @@index([user_id, created_at(sort: Desc)], map: "idx_projects_user_created")
  @@map("projects")
}

model ProjectMessage {
  projectId String  @id @map("project_id")
  message   String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("projects_message")
}

enum ProjectType {
  message
}

enum Plan {
  FREE
  PREMIUM
}
